                  <Button layoutX="510.0" layoutY="516.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="32.0" prefWidth="248.0" styleClass="success" text="Register">
                     <font>
                        <Font name="Times New Roman" size="14.0" />
                     </font>
                  </Button>
                  <ComboBox layoutX="510.0" layoutY="423.0" prefHeight="30.0" prefWidth="248.0" />
